remify($value) {
    u = unit($value);

    if (u == 'px') {
        return unit(($value / 16), 'rem');
    } else {
        return unit($value, u);
    }
}

fs($value) {
    font-size: $value;

    if ($value == inherit) {
        /* nothing */
    } else {
        font-size: remify($value);
    }
}

radius($value) {
    border-radius: $value;
}

flexbox($value = row) {
    display: flex;
    flex-direction: $value;
}

wrap($value = wrap) {
    flex-wrap: wrap;
}

justify($value = center) {
    justify-content: $value;
}

align($value = center) {
    align-items: $value;
}

center($direction = row) {
    flexbox($direction);
    justify();
    align();
}

centerAbsolute() {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}